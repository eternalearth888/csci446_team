<!DOCTYPE html>
<html>
<head>
  <title>Pet Adoption Center</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "pets", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>

<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= "Pet Adoption Center" %>
  </div>

  <div id="columns">
    <div id="side">
      <div id="consider">
	      <% if @consider %>
          <%= hidden_div_if(@consider.line_pets.empty?, id: 'consider') do %>
            <%= render @consider unless @consider.line_pets == nil %>
          <% end %>
        <% end %>
      </div>

      <ul>
        <%= link_to "Foster Home Page", foster_path %><br/>
        <%= link_to "Pet Actions", pets_path %><br/>
        <a href="http://www.google.com">Google Search</a><br/>
        <a href="http://eecs.mines.edu">EECS Home</a>
      </ul>

      <br>

      <div id="nav">
        <% if current_user %>
          <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
					<br>
					<%= link_to "Logout of #{current_user.username}", :logout, method: :post %>
        <% else %>
          <%= link_to "Register", new_user_path %> |
          <%= link_to "Login", :login %>
        <% end %>
      </div>
      <div>
        <p id="notice"><%= flash[:notice] %></p>
        <p id="alert"><%= flash[:alert] %></p>
      </div>
      
    </div>

    <div id="main">
      <%= yield %>
    </div>
  </div>

</body>
</html>
