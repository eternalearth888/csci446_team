<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Crypted password</th>
      <th>Salt</th>
      <th>Isadmin</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.salt %></td>
        <td><%= user.isadmin %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
				<% if current_user.isadmin? and user.username != current_user.username%> <%#only admins can remove users, and only other admins, never themselves(ensures at least one admin)%>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

