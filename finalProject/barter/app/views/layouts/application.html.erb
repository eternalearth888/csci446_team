<!DOCTYPE html>
<html>
<head>
  <title>MinesSwapper Bartering System</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="banner">
		<img id="logo" src="ms_logo.png" /><%= @page_title || "MinesSwapper" %>
	</div>
	<nav>
		<ul id="regNav">
			<li>
				<a href="/items">Items</a>
			</li>
		</ul>
		<ul id="userNav">
			<li>
				<% if current_user %>
					<%= link_to "Edit Profile", edit_user_path(current_user.id) %>
			</li>
			<li>
				<% if Trade.all(:conditions => ['user1 in (?) and status = 0', current_user.id]).length > 0 %>
					<%= link_to "YOU HAVE NEW NOTIFICATIONS", notice_path %>
				<% else %>
					<%= link_to "Notifications", notice_path %>
				<% end %>
			</li>
			<li>
				<%= link_to "Logout", :logout, method: :post %> 
			</li>
			<li>
				<% else %>
					<%= link_to "Register", new_user_path %>
			</li>
			<li>
				<%= link_to "Login", :login %>
			</li>
			<% end %>
		</ul>
	</nav>
	<div id="content">
		<div class="block"></div>
		<section>
			<%= yield %>
		</section>
	</div>
	<footer>
		Copyright &copy; 2014 | Maria Deslis | Andrew Koelling | Anastasia Shpurik <a href="http://eecs.mines.edu/Courses/csci446/" target="_blank">CSCI 446</a>
	</footer>
</body>
</html>
