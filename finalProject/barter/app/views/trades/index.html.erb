<h1>Listing trades</h1>

<table>
  <thead>
    <tr>
      <th>Tradee</th>
      <th>Trader(person started trade)</th>
      <th>Trading for</th>
      <th>Offering</th>
      <th>Status</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= User.find_by_id(trade.user1).username %></td>
        <td><%= User.find_by_id(trade.user2).username %></td>
        <td><%= Item.find_by_id(trade.user1_item).title %></td>
        <td><%= Item.find_by_id(trade.user2_item).title %></td>
				<% if trade.status == 0 %>
       	 <td>Pending</td>
			 <%elsif trade.status == 1 %>
				 <td>Accepted</td>
			 <%elsif trade.status == 2 %>
				 <td>Declined</td>
			 <%end%>
        <td><%= trade.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trade', new_trade_path %>
