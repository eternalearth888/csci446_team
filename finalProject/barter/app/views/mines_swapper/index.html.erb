<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<table id="seperate">
<tr>
<td class="entry">
<% @items.each do |item| %>
		<table id="itemDisplay">
			<thead>
				<tr>
					<td colspan="2"><h3><%= item.title %></h3></td>
				</tr>
			</thead>
			<tbody>
			<tr>
				<td id="itemImage">
					<%= image_tag(item.itemimage) %>
				</td>
				<td>
					<table id="itemInfo">
						<tr>
							<td id="leftCell">User:</td>
							<td><%= User.find_by_id(item.user_id).username %></td>
						</tr>
						<tr>
							<td id="leftCell" colspan="2">Description:</td>
						</tr>
						<tr>
							<td colspan="2"><%= sanitize(item.description) %>
							</td>
						</tr>
					</table>
				</td>
			</tr>
			</tbody>
		</table>
<% end %>
</td>
<td class="right">
STUFF GOES HERE
</td>
</table>
